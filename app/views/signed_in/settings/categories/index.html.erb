<h1 class="my-3">Categories</h1>

<div class="p-3 bg-light rounded">

  <% if @categories.empty? %>
    <h3 class="text-center">Categories are empty ðŸ˜•</h3>
    <p class="text-center">How about
      <%= link_to 'creating', new_settings_category_path %>
      one?</p>
  <% else %>
    <div class="d-flex flex-wrap justify-content-center">
    <% @categories.each do |category| %>
    <span class="d-inline-block mr-1 position-relative category-card">
      <%= link_to settings_category_path(category.id), class: 'text-decoration-none text-dark' do %>
        <span class="position-relative card d-inline-flex align-items-center justify-content-center fixed-size-150">
          <span class="text-dark text-center text-wrap w-100">
            <span class="d-block">
              <%= category.title %>
            </span>
            <span class="small">(<%= category.color %>)</span>
          </span>
          <span class="colored-badge badge badge-dark" style="background-color: <%= category.color %>">
            <%= category.tasks_count ? category.tasks_count : 0 %>
          </span>
        </span>
      <% end %>

      <%= link_to edit_settings_category_path(category), class: 'category-edit' do %>
      <i class="fas fa-edit"></i>
    <% end %>

      <%= link_to settings_category_path(category.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'trash' do %>
      <i class="fas fa-trash"></i>
    <% end %>
    </span>

    <% end %>
    </div>
  <% end %>

  <div class="my-2">
    <%= link_to 'New Category', new_settings_category_path, class: 'btn btn-primary' %>
  </div>
</div>