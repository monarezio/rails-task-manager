<div class="bg-light border-dark rounded p-5 shadow-sm mt-5">
  <h2>Forgot your password?</h2>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: {autocomplete: "email"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me a reset link", :class => "btn-primary" %>
      <small>
        <span class="ml-2 mr-1">or</span><%= render "devise/shared/links" %>
      </small>
    </div>
  <% end %>
</div>

